    <!-- Template Main Javascript File -->
    <script src="./main_css/nav_bar_css/js/main.js"></script>
    <!-- On load document -->
<script>        
      document.addEventListener('DOMContentLoaded', () => {
          const resetPasswordForm = document.getElementById('resetPasswordForm');
          const statusMessage = document.getElementById('statusMessage');
          
          resetPasswordForm.addEventListener('submit', async (event) => {
              event.preventDefault(); 

              const formData = new URLSearchParams(new FormData(resetPasswordForm));
              

              try {
                  const response = await fetch('/resetPassword', {
                      method: 'POST',
                      headers: {
                          'Content-Type': 'application/x-www-form-urlencoded'
                      },
                      body: formData
                  });
          
                  if (response.ok) {
                    window.location.href = '/main';
                  } else {
                      const errorMessage = await response.text();
                      statusMessage.textContent = errorMessage;
                      statusMessage.classList.add('text-red-500');
                      statusMessage.classList.remove('text-green-500');
                      
                  }
              } catch (error) {
                  console.error('Error accured:', error);
                  statusMessage.textContent = 'Error reseting password';
                  statusMessage.classList.add('text-red-500');
                  statusMessage.classList.remove('text-green-500');
              }
          });
      });
</script>
