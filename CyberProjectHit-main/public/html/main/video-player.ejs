    <video id="videoPlayer" controls>
        Your browser does not support the video tag.
    </video>
    <h2>Available Videos</h2>
    <ul id="videoList"></ul>
    <div id="errorMessage" class="error"></div>

    <script>
        const videoPlayer = document.getElementById('videoPlayer');
        const videoList = document.getElementById('videoList');
        const errorMessage = document.getElementById('errorMessage');

        // Fetch the list of videos from the server
        fetch('/api/videos')
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(videos => {
                if (videos.length === 0) {
                    errorMessage.textContent = 'No videos found in the uploads directory.';
                    return;
                }
                videos.forEach(video => {
                    const li = document.createElement('li');
                    const a = document.createElement('a');
                    a.href = '#';
                    a.textContent = video;
                    a.onclick = (e) => {
                        e.preventDefault();
                        videoPlayer.src = `/upload_vid_files/uploads/${video}`;
                        videoPlayer.play();
                    };
                    li.appendChild(a);
                    videoList.appendChild(li);
                });
            })
            .catch(error => {
                console.error('Error:', error);
                errorMessage.textContent = `Error loading videos: ${error.message}`;
            });
    </script>
